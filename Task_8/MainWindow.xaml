<Window x:Class="Task_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <TextBox Name="TB_1" Width="50" Height="50" Canvas.Left="350" Canvas.Top="150"/>
        <TextBox Name="TB_2" Width="50" Height="50" Canvas.Left="450" Canvas.Top="150"/>
        <Button Name="plas" Content="Сложить" Width="50" Height="50" Canvas.Left="300" Canvas.Top="200" 
                Button.Click="plas_Click"/>
        <Button Name="minus" Content="Вычесть" Width="50" Height="50" Canvas.Left="350" Canvas.Top="200" 
                Button.Click="minus_Click"/>
        <Button Name="slesh" Content="Поделить" Width="50" Height="50" Canvas.Left="450" Canvas.Top="200" 
                Button.Click="slesh_Click"/>
        <Button Name="umnozg" Content="Умножить" Width="50" Height="50" Canvas.Left="500" Canvas.Top="200" 
                Button.Click="umnozg_Click"/>
        <Label Name="label" Width="50" Height="100" Canvas.Left="550" Canvas.Top="150"/>
    </Canvas>
</Window>
